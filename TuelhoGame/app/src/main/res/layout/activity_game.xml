<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gustavosouza.tuelhogame.Game"
    android:background="@drawable/telagame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botaoagua"
        android:id="@+id/btnAgua"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btnComida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/botaocomida"
        android:id="@+id/btnComida"
        android:background="@android:color/transparent"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numAgua"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBaseline="@+id/numComida"
        android:layout_alignBottom="@+id/numComida"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numComida"
        android:textSize="25dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnComida"
        android:layout_toStartOf="@+id/btnComida"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"

        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/tuelho1"
        android:id="@+id/imageView"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/btnAgua"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
